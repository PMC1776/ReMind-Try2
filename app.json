{
  "expo": {
    "name": "ReMind",
    "slug": "remind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "remind",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pmc.remind",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "ReMind needs your location to send reminders when you arrive at or leave specific places.",
        "NSLocationWhenInUseUsageDescription": "ReMind needs your location to show where you are on the map and create location-based reminders.",
        "NSLocationAlwaysUsageDescription": "ReMind needs background location access to remind you when you arrive at or leave specific places, even when the app is closed.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.pmc.remind",
      "adaptiveIcon": {
        "backgroundColor": "#3B82F6",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "POST_NOTIFICATIONS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#3B82F6",
          "dark": {
            "backgroundColor": "#1F2937"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "ReMind needs your location to send reminders when you arrive at or leave specific places.",
          "locationWhenInUsePermission": "ReMind needs your location to show where you are on the map.",
          "locationAlwaysPermission": "ReMind needs background location access to remind you when you arrive at or leave specific places."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#3B82F6"
        }
      ],
      [
        "react-native-maps",
        {
          "googleMapsApiKey": "AIzaSyAGohtmpCOxqO88_AMJ6LWNp4jnl1wpFaY"
        }
      ],
      "expo-web-browser",
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "dynamic",
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "a9a3d6ff-c9d3-4a3e-b6e3-d16786a85616"
      }
    }
  }
}
